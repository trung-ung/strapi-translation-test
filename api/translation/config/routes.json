{
  "routes": [
    {
      "method": "GET",
      "path": "/translations",
      "handler": "translation.find",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    },
    {
      "method": "GET",
      "path": "/translations/count",
      "handler": "translation.count",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    },
    {
      "method": "GET",
      "path": "/translations/:id",
      "handler": "translation.findOne",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    },
    {
      "method": "POST",
      "path": "/translations",
      "handler": "translation.create",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    },
    {
      "method": "PUT",
      "path": "/translations/:id",
      "handler": "translation.update",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    },
    {
      "method": "DELETE",
      "path": "/translations/:id",
      "handler": "translation.delete",
      "config": {
        "policies": ["global.isSameGroup"]
      }
    }
  ]
}
